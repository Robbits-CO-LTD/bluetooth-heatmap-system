# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=bluetooth_heatmap
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# Database URL (compat)
DATABASE_URL=postgresql+asyncpg://postgres:your_secure_password_here@localhost:5432/bluetooth_heatmap

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Redis URL (compat)
REDIS_URL=redis://localhost:6379/0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_SECRET_KEY=your-secret-key-here
API_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8050"]
# CORS origins as CSV (compat)
API_CORS_ORIGINS_CSV=http://localhost:3000,http://localhost:8050

# Security
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Bluetooth Scanner
SCANNER_INTERVAL=5
SCANNER_DURATION=4
RSSI_THRESHOLD=-90

# Analysis Settings
ANALYSIS_INTERVAL=10
DWELL_TIME_THRESHOLD=60
FLOW_MIN_COUNT=1

# Visualization
HEATMAP_RESOLUTION=1.0
HEATMAP_SMOOTHING=true
DASHBOARD_UPDATE_INTERVAL=5

# TimescaleDB
TIMESCALE_ENABLED=true
TIMESCALE_RETENTION_DAYS=90
TIMESCALE_CHUNK_INTERVAL=1
# Duplicate flag (compat)
TIMESCALEDB_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Environment
ENVIRONMENT=development
DEBUG=true